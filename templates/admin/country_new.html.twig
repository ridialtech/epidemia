{% extends 'admin/base.html.twig' %}
{% block title %}Ajouter un pays{% endblock %}
{% block content %}
<div class="row">
    <div class="col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Ajouter un pays</h6>
            </div>
            <div class="card-body">
                <form method="post" action="{{ path('country_new') }}">
                    <div class="form-group">
                        <label for="paysNom">Nom du pays</label>
                        <input type="text" class="form-control" id="paysNom" name="name" placeholder="Entrer le nom">

                    </div>
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
